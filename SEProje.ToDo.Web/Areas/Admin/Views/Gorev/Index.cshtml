@model List<GorevListViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h4 class="mt-4">Görev Listesi</h4>

<a asp-area="Admin" asp-controller="Gorev" asp-action="GorevEkle" class="btn btn-sm btn-primary my-2">Yeni Görev Ekle</a>

<table class="table table-sm table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">Ad</th>
            <th scope="col">Aciklama</th>
            <th scope="col">Durum</th>
            <th scope="col">Oluşturma Tarihi</th>
            <th scope="col">Aciliyet</th>
            <th class="text-center" style="width:15%" scope="col">İşlem</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td scope="row">@item.Ad</td>
                    <td>@item.Aciklama</td>
                    <td>@item.Durum</td>
                    <td>@item.OlusturmaTarihi</td>
                    <td>@item.Aciliyet?.Tanim</td>
                    <td class="text-center">
                        <a asp-area="Admin" asp-action="GorevDuzenle" asp-controller="Gorev" asp-route-id="@item.Id" class="btn btn-sm btn-info my-2">Düzenle</a>
                        <a asp-area="Admin" asp-action="GorevSil" asp-controller="Gorev" asp-route-id="@item.Id" class="btn btn-sm btn-danger my-2">Sil</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr class="text-center text-danger">
                <td colspan="6">Sistemde kayıtlı görev bulunamadı!</td>
            </tr>
        }
    </tbody>
</table>