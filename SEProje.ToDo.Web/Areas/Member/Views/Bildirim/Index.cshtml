@model List<BildirimListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
    int index = 0;
}

<h4 class="my-4">Bildirimler</h4>

@if (Model.Count > 0)
{
    <table class="table table-sm table-bordered">
        <thead>
            <tr class="table-info">
                <th class="text-center" style="width: 5%">#</th>
                <th>Açıklama</th>
                <th class="text-center" style="width: 20%">İşlem</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                index++;

                <tr>
                    <td class="text-center">@index</td>

                    <td>@item.Aciklama</td>

                    <td class="text-center">
                        <form method="post" asp-area="Member" asp-controller="Bildirim" asp-action="Index" class="my-2">

                            <input type="hidden" name="id" value="@item.Id" />

                            <button type="submit" class="btn btn-outline-dark btn-sm"><i class="fas fa-check mr-2"></i>Okundu Olarak İşaretle</button>

                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        <strong>Herhangi bir bildiriminiz bulunmamaktadır!</strong>
    </div>
}