@model AppUserAddDto
@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = "~/Views/Shared/_StandartLayout.cshtml";
}

<div class="container">
    <div class="col-12">
        <h4 class="text-center mt-5">Kayıt Ol</h4>

        <form asp-controller="Home" asp-action="KayitOl" method="post" class="shadow w-50 mx-auto p-3 mt-4">

            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>

            <div class="form-group">
                <label asp-for="Surname"></label>
                <input asp-for="Surname" class="form-control" />
                <span class="text-danger" asp-validation-for="Surname"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>

            <div class="form-group">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control" />
                <span class="text-danger" asp-validation-for="UserName"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <button type="submit" class="btn btn-outline-success btn-sm">Kayıt Ol</button>

            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary btn-sm float-right">Giriş Yap</a>
        </form>
    </div>
</div>